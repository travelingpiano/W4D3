<h1><%= @cat.name %></h1>

<img src="https://s-media-cache-ak0.pinimg.com/736x/52/fd/5a/52fd5a15b32abad7bd304236ca6dbd38.jpg">

<table>
  <tr>
    <th>Attribute</th>
    <th>Value</th>
  </tr>
  <% [:age, :birth_date, :color, :sex].each do |attr_name| %>
    <tr>
      <td><%= attr_name %></td>
      <td><%= @cat.send(attr_name) %></td>
    </tr>
  <% end %>
</table>

<%= link_to "Edit #{@cat.name}", edit_cat_url(@cat) %>

<h2>Rental Requests</h2>
<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @cat.rental_requests.order("start_date").each do |req| %>
    <%= render "req_tr", req: req %>
  <% end %>
</table>
<% if current_user %>
  <%= button_to "Make New Request", new_cat_rental_request_url, method: :get%>
<% end %>
